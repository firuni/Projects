<Page x:Class="Library.Pages.RealizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="420" d:DesignWidth="800"
      Title="RealizationPage" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="TBoxSearch" HorizontalAlignment="Left" Padding="5, 5, 0, 0" Width="200" Height="20" Margin="5" TextChanged="TBoxSearchTextChanged"></TextBox>

        <DataGrid x:Name="dGridRealization" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Книга" Binding="{Binding Book.Наименование}"></DataGridTextColumn>
                <DataGridTextColumn Header="Читатель" Binding="{Binding Reader.Фамилия}"></DataGridTextColumn>
                <DataGridTextColumn Header="Сотрудник" Binding="{Binding Employee.Фамилия}"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата выдачи" Binding="{Binding Дата_выдачи, StringFormat={} {0:dd.MM.yyyy}}"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата возврата" Binding="{Binding Дата_возврата, StringFormat={} {0:dd.MM.yyyy}}"></DataGridTextColumn>
                <DataGridTemplateColumn Width="auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="BtnEdit" Content="Редактировать" Height="25" Width="120" Style="{DynamicResource ButtonStyle}" Click="BtnEditClick"></Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="AddRealization" Grid.Row="2" HorizontalAlignment="Left" Content="Добавить" Height="25" Width="100" Style="{DynamicResource ButtonStyle}" Margin="10, 0, 0, 0" Click="AddRealizationClick"></Button>
        <Button x:Name="DeleteRealization" Grid.Row="2" HorizontalAlignment="Right" Content="Удалить" Height="25" Width="100" Style="{DynamicResource ButtonStyle}" Margin="0, 0, 10, 0" Click="DeleteRealizationClick"></Button>
    </Grid>
</Page>
